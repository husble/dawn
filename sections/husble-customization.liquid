            "default": "#000000"
        },
      {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image Customization 1"
      },
      {
        "type": "richtext",
        "id": "title_1",
        "label": "Title 1",
        "default": "<p>Step 1: bla bla</p>"
      },
      {
        "type": "richtext",
        "id": "detail_1",
        "label": "Detail 1",
        "default": "<p>bla bla bla bla</p>"
      },
      {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image Customization 2"
      },
      {
        "type": "richtext",
        "id": "title_2",
        "label": "Title 2",
        "default": "<p>Step 2: bla bla</p>"
      },
      {
        "type": "richtext",
        "id": "detail_2",
        "label": "Detail 2",
        "default": "<p>bla bla bla bla</p>"
      },
      {
          "type": "image_picker",
          "id": "image_3",
          "label": "Image Customization 3"
      },
      {
        "type": "richtext",
        "id": "title_3",
        "label": "Title 3",
        "default": "<p>Step 3: bla bla</p>"
      },
      {
        "type": "richtext",
        "id": "detail_3",
        "label": "Detail 3",
        "default": "<p>bla bla bla bla</p>"
      },
      {
          "type": "url",
