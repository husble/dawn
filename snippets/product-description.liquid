{% capture description %}
  {%- if product.empty? -%}
    {{ 'home_page.onboarding.product_description' | t }}
  {%- else -%}
    {{ product.description }}
  {%- endif -%}
{% endcapture %}
{%- if is_tab -%}
  {% assign title = 'products.product.description' | t %}
  {% assign is_open = true %}
  {%- render 'tab', id: id, title: title, content: description, is_open: is_open -%}
{%- else -%}
  <div class="rte">
    {{ description }}
  </div>
{%- endif -%}
